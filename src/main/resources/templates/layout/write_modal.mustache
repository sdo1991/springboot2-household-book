<!-- 글쓰기 모달 -->
{{#user}}
   <form id="write_form" method="post" enctype="multipart/form-data">
        <div class="modal fade" id="saveModal">
            <div class="modal-dialog modal-lg modal-dialog-scrollable ">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">글쓰기</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>



                    <div class="row p-1">
                        <p class="col-2"></p>
                        <div class="p-1 col" id="tags">
                            <button type="button" class="tag-button btn btn-outline-primary" id="tag-btn-1">#잡담</button>
                            <button type="button" class="tag-button btn btn-outline-secondary" id="tag-btn-2">#질문</button>
                            <button type="button" class="tag-button btn btn-outline-secondary" id="tag-btn-3">#취미</button>
                            <button type="button" class="tag-button btn btn-outline-secondary" id="tag-btn-4">#고쳐주세요</button>
                        </div>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="form-group row">
                            <img src="image/test-image.jpg" class="rounded-circle col-2 col-sm-2 col-md-2 col-lg-1 col-xl-1" alt="Cinque Terre" style="width:50px; height:50px">
                            <textarea class="textarea form-control autosize col-9 col-sm-9 col-md-9 col-lg-10 col-xl-10" id="write_contents" name="write_contents" style="min-height:150px; resize:none"></textarea>
                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <div style="position:absolute;left:5px;">
                            <input type="file" id="write_images" name="write_images" multiple="multiple">
                        </div>
                        <button type="button" class="btn btn-primary" id="btn-post-save">Post</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


        <input type="hidden" value="{{id}}" id="write_author" name="write_author">

    </form>
{{/user}}
