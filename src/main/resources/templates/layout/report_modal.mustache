<!-- 글쓰기 모달 -->
{{#user}}
   <form id="write_form" method="post" enctype="multipart/form-data">
        <div class="modal fade" id="reportModal">
            <div class="modal-dialog modal-md modal-dialog-scrollable ">
                <div class="modal-content">

                    <input type="hidden" value="" id="report_post_id">
                    <input type="hidden" value="" id="report_user_id">
                    <input type="hidden" value="" id="report_target">
                    <input type="hidden" value="" id="report_reply_id">


                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">신고하기</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>


                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="form-group col-11">
                            <label for="report_category">신고사유:</label>
                            <select class="form-control" id="report_category">
                                <option value="advertisement">홍보성 글</option>
                                <option value="malicious">욕설/인신공격</option>
                                <option value="spam">도배</option>
                                <option value="other">기타</option>
                            </select>
                        </div>
                        <div class="form-group rounded-circle col-11">
                            <textarea class="textarea form-control autosize" id="report_contents" name="report_contents" style="min-height:150px; resize:none"></textarea>
                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="submit_report">Report</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{{/user}}
